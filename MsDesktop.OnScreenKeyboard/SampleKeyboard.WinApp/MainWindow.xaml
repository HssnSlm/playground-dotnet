                                            </DoubleAnimationUsingKeyFrames>
                                            <Int32AnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="NumericKeyboard" Storyboard.TargetProperty="(Panel.ZIndex)">
                                                <SplineInt32KeyFrame KeyTime="00:00:00.1330000" Value="1"/>
                                            </Int32AnimationUsingKeyFrames>
                                            <Int32AnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="QuertyKeyboard" Storyboard.TargetProperty="(Panel.ZIndex)">
